@model CursosArsi.Models.Subtemas

@{
    ViewBag.Title = "GuardarSubTema";
    int idSubTema = Convert.ToInt32(Session["id_lista_subtema"]);
}

<h2>Guardar Subtema</h2>

<form action="@Url.Action("NuevoSubTema", "Cursos")" method="post">
    <div class="form-horizontal">
        <h4>Subtemas</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
          <div class="form-group">
            @Html.LabelFor(model => model.descripcion_subtema, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.descripcion_subtema, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.descripcion_subtema, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.url_subtema, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.url_subtema, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.url_subtema, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar Registro" class="btn btn-default btn-warning" />
            </div>
        </div>
    </div>
   </form>
    <div>
        @Html.ActionLink("Lista", "SubTemas", new { id = idSubTema })
    </div>
