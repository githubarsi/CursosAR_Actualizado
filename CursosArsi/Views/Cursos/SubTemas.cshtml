@model IEnumerable<CursosArsi.Models.Subtemas>

@{
    ViewBag.Title = "SubTemas";
    int idTema = Convert.ToInt32(Session["id_lista_tema"]);
}

<h2>Subtemas</h2>

<p>
    <a href='@Url.Action("GuardarSubTema", "Cursos")'><img src="~/Images/agregar.png" style="width:7%; height:12%;" /></a>

    
</p>

<a href="~/Cursos/Temas/@idTema"><button class="btn-primary" style="float:right">Atras</button></a>

</br>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.id_subtema)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.descripcion_subtema)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.url_subtema)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.id_subtema)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.descripcion_subtema)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.url_subtema)
        </td>
        <td>
            <a href='@Url.Action("EditarSubTemas", "Cursos",  new { id = item.id_subtema} )'><img src="~/Images/editar.png" style="width:25px; height:35px;" /></a>
            <a href='@Url.Action("EliminarSubtema", "Cursos",  new { id = item.id_subtema} )'><img src="~/Images/eliminar.png" style="width:25px; height:35px;" /></a>
           
        </td>
    </tr>
}

</table>
