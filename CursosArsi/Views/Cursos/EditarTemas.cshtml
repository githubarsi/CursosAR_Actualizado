@model CursosArsi.Models.Temas

@{
    ViewBag.Title = "EditarTemas";
    int idTema = Convert.ToInt32(Session["id_lista_tema"]);

}

<h2>Editar Tema</h2>


<form action="@Url.Action("EditarTemaRespuesta", "Cursos")" method="post">

    <div class="form-horizontal">
        <h4>Temas</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.id_tema, new { htmlAttributes = new { @class = "form-control", @type = "hidden" } })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.descripcion_tema, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.descripcion_tema, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.descripcion_tema, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.url_tema, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.url_tema, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.url_tema, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-default btn-warning" />
            </div>
        </div>
    </div>
</form>

<div>
    @Html.ActionLink("Lista", "Temas", new { id = idTema })
</div>
